#/bin/bash --login

#PBS -l select=35
#PBS -l walltime=3:59:59
#PBS -S /bin/bash
#PBS -A e01-JWK2015
# PBS -q standard

export PBS_O_WORKDIR=$(readlink -f $PBS_O_WORKDIR)
cd $PBS_O_WORKDIR

lfs setstripe -c -1 $PBS_O_WORKDIR/data
lfs setstripe -c -1 $PBS_O_WORKDIR/out
lfs setstripe -c -1 $PBS_O_WORKDIR/misc
lfs setstripe -c -1 $PBS_O_WORKDIR/rsta

export OMP_NUM_THREADS=1
aprun -n 840 srun.exe > display
